{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "groupName": "asciidoctor dependencies",
      "matchPackageNames": [
        "/^org\\.asciidoctor/"
      ]
    },
    {
      "matchDepNames": [
        "hakimel/reveal.js"
      ],
      "automerge": false,
      "minimumReleaseAge": "7 days"
    }
  ],
  "maven": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^pom\\.xml$"
      ],
      "matchStrings": [
        "<revealjs\\.version>(?<currentValue>.*?)</revealjs\\.version>"
      ],
      "depNameTemplate": "hakimel/reveal.js",
      "datasourceTemplate": "github-releases"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "schedule": [
    "every weekend"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
